@{
    ViewData["Title"] = "Gestión de Facturación";
}
<h1 class="mb-4 text-center">Facturación</h1>
<div class="d-flex justify-content-end mb-4 gap-2">
    <button type="button" class="btn btn-info" onclick="VerResumenTratamientosPorPaciente()">
        <i class="bi bi-list-check"></i> Ver Resumen de Tratamientos
    </button>
</div>
<fieldset class="border p-4 rounded shadow-sm mt-4">
    <legend class="w-auto px-3">Búsqueda de Facturas</legend>
    <form id="frmBusquedaFacturas" method="post" class="row g-3">
        <div class="col-md-6">
            <label for="buscarPacienteId" class="form-label">Paciente</label>
            <select class="form-select" name="pacienteId" id="buscarPacienteId">
                <option value="">Seleccione un paciente</option>
            </select>
        </div>
        <div class="col-md-6">
            <label for="buscarMetodoPago" class="form-label">Método de Pago</label>
            <select class="form-select" name="metodoPago" id="buscarMetodoPago">
                <option value="">Seleccione un método</option>
                <option value="Efectivo">Efectivo</option>
                <option value="Tarjeta de crédito">Tarjeta de crédito</option>
                <option value="Tarjeta de débito">Tarjeta de débito</option>
                <option value="Transferencia">Transferencia</option>
            </select>
        </div>
        <div class="col-md-6">
            <label for="buscarFechaPago" class="form-label">Fecha de Pago</label>
            <input type="date" class="form-control" name="fechaPago" id="buscarFechaPago">
        </div>
        <div class="col-12 text-end mt-3">
            <button type="button" class="btn btn-primary me-2" onclick="BuscarFacturas()">
                <i class="bi bi-search"></i> Buscar
            </button>
            <button type="button" class="btn btn-secondary" onclick="LimpiarBusquedaFacturas()">
                <i class="bi bi-eraser"></i> Limpiar
            </button>
        </div>
    </form>
</fieldset>
<input type="hidden" id="hdfOculto" value="" />
<div id="divTable" class="mt-4">
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/generic.js"></script>
    <script src="~/js/Facturacion.js"></script>
}