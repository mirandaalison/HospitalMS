<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospitalMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HospitalMS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        body {
            padding: 0;
            margin: 0;
            overflow-x: hidden;
        }

        .sidebar {
            position: fixed;
            height: 100%;
            width: 250px;
            background-color: #333;
            left: 0;
            top: 0;
            z-index: 1000;
            transition: all 0.3s;
            overflow-x: hidden; 
        }

        .sidebar-header {
            padding: 20px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .sidebar.collapsed {
            width: 70px;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-menu li {
            padding: 10px 20px;
        }

        .sidebar-menu li a {
            color: white;
            text-decoration: none;
            white-space: nowrap;
            display: flex;
            align-items: center;
        }

        .menu-text {
            transition: opacity 0.3s;
            opacity: 1;
            margin-left: 10px;
        }

        .sidebar.collapsed .menu-text {
            opacity: 0;
            width: 0;
            display: none;
        }

        .toggle-btn {
            cursor: pointer;
        }

        .toggle-btn span {
            display: block;
            width: 25px;
            height: 3px;
            background-color: white;
            margin: 5px 0;
        }

        .main-content {
            margin-left: 250px; 
            padding: 20px;
            transition: all 0.3s;
        }

        .main-content.expanded {
            margin-left: 70px; 
        }

        .footer {
            margin-left: 250px;
            transition: all 0.3s;
        }

        .footer.expanded {
            margin-left: 70px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <h3 class="menu-text">HospitalMS</h3>
            <div class="toggle-btn">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>

        <ul class="sidebar-menu">
            <li>
                <a class="nav-link text-white" asp-area="" asp-controller="Citas" asp-action="Index">
                    <i class="bi bi-calendar"></i>
                    <span class="menu-text">Citas</span>
                </a>
            </li>
            <li>
                <a class="nav-link text-white" asp-area="" asp-controller="Especialidades" asp-action="Index">
                    <i class="bi bi-clipboard-plus"></i>
                    <span class="menu-text">Especialidades</span>
                </a>
            </li>
            <li>
                <a class="nav-link text-white" asp-area="" asp-controller="Facturacion" asp-action="Index">
                    <i class="bi bi-receipt"></i>
                    <span class="menu-text">Facturacion</span>
                </a>
            </li>
            <li>
                <a class="nav-link text-white" asp-area="" asp-controller="Medicos" asp-action="Index">
                    <i class="bi bi-person"></i>
                    <span class="menu-text">Medicos</span>
                </a>
            </li>
            <li>
                <a class="nav-link text-white" asp-area="" asp-controller="Pacientes" asp-action="Index">
                    <i class="bi bi-people"></i>
                    <span class="menu-text">Pacientes</span>
                </a>
            </li>
            <li>
                <a class="nav-link text-white" asp-area="" asp-controller="Tratamientos" asp-action="Index">
                    <i class="bi bi-capsule"></i>
                    <span class="menu-text">Tratamientos</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HospitalMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function(){
            $('.toggle-btn').click(function(){
                $('.sidebar').toggleClass('collapsed');
                $('.main-content, .footer').toggleClass('expanded');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>