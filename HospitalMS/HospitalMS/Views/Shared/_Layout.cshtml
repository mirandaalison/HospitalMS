<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospitalMS</title>

    <!-- Google Fonts: Roboto -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HospitalMS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        /* Fuente global actualizada */
        body {
            font-family: 'Roboto', sans-serif;
            padding: 0;
            margin: 0;
            overflow-x: hidden;
            background-color: #f0f2f5; /* Color de fondo más claro */
        }

        .sidebar {
            position: fixed;
            height: 100%;
            width: 250px;
            background-color: #2c3e50; /* Color de fondo más moderno */
            left: 0;
            top: 0;
            z-index: 1000;
            transition: all 0.3s;
            overflow-x: hidden;
        }

        .sidebar-header {
            padding: 20px;
            color: #ecf0f1;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #1a252f; /* Color más oscuro para el header */
        }

            .sidebar-header h3 {
                margin: 0;
                display: flex;
                align-items: center;
            }

                .sidebar-header h3 i {
                    font-size: 1.5rem;
                    margin-right: 10px;
                    color: #e74c3c; /* Color destacado para el icono */
                }

        .sidebar.collapsed {
            width: 70px;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar-menu li {
                padding: 10px 20px;
            }

                .sidebar-menu li a {
                    color: #ecf0f1;
                    text-decoration: none;
                    white-space: nowrap;
                    display: flex;
                    align-items: center;
                    transition: background-color 0.3s;
                }

                    .sidebar-menu li a:hover {
                        background-color: #34495e;
                        border-radius: 4px;
                    }

        .menu-text {
            transition: opacity 0.3s;
            opacity: 1;
            margin-left: 10px;
        }

        .sidebar.collapsed .menu-text {
            opacity: 0;
            width: 0;
            display: none;
        }

        .toggle-btn {
            cursor: pointer;
        }

            .toggle-btn span {
                display: block;
                width: 25px;
                height: 3px;
                background-color: #ecf0f1;
                margin: 5px 0;
            }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            transition: all 0.3s;
            background-color: #fff;
        }

            .main-content.expanded {
                margin-left: 70px;
            }

        .footer {
            margin-left: 250px;
            transition: all 0.3s;
            background-color: #ecf0f1;
            padding: 10px 0;
        }

            .footer.expanded {
                margin-left: 70px;
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <h3 class="menu-text">
                <i class="bi bi-hospital"></i>
                HospitalMS
            </h3>
            <div class="toggle-btn">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>

        <ul class="sidebar-menu">
            <li>
                <a class="nav-link" asp-area="" asp-controller="Citas" asp-action="Index">
                    <i class="bi bi-calendar"></i>
                    <span class="menu-text">Citas</span>
                </a>
            </li>
            <li>
                <a class="nav-link" asp-area="" asp-controller="Especialidades" asp-action="Index">
                    <i class="bi bi-clipboard-plus"></i>
                    <span class="menu-text">Especialidades</span>
                </a>
            </li>
            <li>
                <a class="nav-link" asp-area="" asp-controller="Facturacion" asp-action="Index">
                    <i class="bi bi-receipt"></i>
                    <span class="menu-text">Facturacion</span>
                </a>
            </li>
            <li>
                <a class="nav-link" asp-area="" asp-controller="Medicos" asp-action="Index">
                    <i class="bi bi-person"></i>
                    <span class="menu-text">Medicos</span>
                </a>
            </li>
            <li>
                <a class="nav-link" asp-area="" asp-controller="Pacientes" asp-action="Index">
                    <i class="bi bi-people"></i>
                    <span class="menu-text">Pacientes</span>
                </a>
            </li>
            <li>
                <a class="nav-link" asp-area="" asp-controller="Tratamientos" asp-action="Index">
                    <i class="bi bi-capsule"></i>
                    <span class="menu-text">Tratamientos</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HospitalMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function(){
            $('.toggle-btn').click(function(){
                $('.sidebar').toggleClass('collapsed');
                $('.main-content, .footer').toggleClass('expanded');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
