@{
    ViewData["Title"] = "Gestión de Pacientes";
}

<h1 class="mb-4 text-center">Pacientes</h1>

<div class="d-flex justify-content-end mb-4">
    <button type="button" class="btn btn-primary" onclick="GuardarPacientes()">
        <i class="bi bi-plus-circle"></i> Agregar Paciente
    </button>
</div>

<fieldset class="border p-4 rounded shadow-sm mt-4">
    <legend class="w-auto px-3">Búsqueda de Pacientes</legend>
    <form id="frmBusquedaPacientes" method="post" class="row g-3">
        <div class="col-md-6">
            <label for="buscarNombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" name="Nombre" id="buscarNombre" placeholder="Nombre">
        </div>
        <div class="col-md-6">
            <label for="buscarApellido" class="form-label">Apellido</label>
            <input type="text" class="form-control" name="Apellido" id="buscarApellido" placeholder="Apellido">
        </div>
        <div class="col-md-6">
            <label for="buscarFechaNacimiento" class="form-label">Fecha de Nacimiento</label>
            <input type="date" class="form-control" name="FechaNacimiento" id="buscarFechaNacimiento">
        </div>
        <div class="col-md-6">
            <label for="buscarTelefono" class="form-label">Teléfono</label>
            <input type="tel" class="form-control" name="Telefono" id="buscarTelefono" placeholder="Teléfono">
        </div>
        <div class="col-md-6">
            <label for="buscarEmail" class="form-label">Email</label>
            <input type="email" class="form-control" name="Email" id="buscarEmail" placeholder="Email">
        </div>
        <div class="col-md-6">
            <label for="buscarDireccion" class="form-label">Dirección</label>
            <input type="text" class="form-control" name="Direccion" id="buscarDireccion" placeholder="Dirección">
        </div>
        <div class="col-12 text-end mt-3">
            <button type="button" class="btn btn-primary me-2" onclick="BuscarPacientes()">
                <i class="bi bi-search"></i> Buscar
            </button>
            <button type="button" class="btn btn-secondary" onclick="LimpiarBusquedaPacientes()">
                <i class="bi bi-eraser"></i> Limpiar
            </button>
        </div>
    </form>
</fieldset> 

<input type="hidden" id="hdfOculto" value="" />

<div id="divTable" class="mt-4">
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/js/generic.js"></script>
    <script src="~/js/Pacientes.js"></script>
}