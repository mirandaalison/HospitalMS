@{
    ViewData["Title"] = "Gestión de Tratamientos";
}

<h1 class="mb-4 text-center">Tratamientos</h1>

<fieldset class="border p-4 rounded shadow-sm">
    <legend class="w-auto px-3">Agregar Tratamiento</legend>

    <form id="frmGuardarTratamientos" method="post" class="row g-3">
        <div class="col-md-6">
            <label for="PacienteId" class="form-label">ID del Paciente</label>
            <input type="number" class="form-control" name="PacienteId" id="PacienteId" placeholder="ID del Paciente">
        </div>
        <div class="col-md-6">
            <label for="Descripcion" class="form-label">Descripción</label>
            <input type="text" class="form-control" name="Descripcion" id="Descripcion" placeholder="Descripción del tratamiento">
        </div>
        <div class="col-md-6">
            <label for="Fecha" class="form-label">Fecha</label>
            <input type="date" class="form-control" name="Fecha" id="Fecha">
        </div>
        <div class="col-md-6">
            <label for="Costo" class="form-label">Costo</label>
            <input type="number" step="0.01" class="form-control" name="Costo" id="Costo" placeholder="Costo del tratamiento">
        </div>

        <div class="col-12 text-end mt-3">
            <button type="button" class="btn btn-primary me-2" onclick="GuardarTratamientos()">
                <i class="bi bi-save"></i> Agregar
            </button>
            <button type="button" class="btn btn-secondary" onclick="LimpiarTratamientos()">
                <i class="bi bi-eraser"></i> Limpiar
            </button>
        </div>
    </form>
</fieldset>

<fieldset class="border p-4 rounded shadow-sm mt-4">
    <legend class="w-auto px-3">Búsqueda de Tratamientos</legend>
    <form id="frmBusquedaTratamientos" method="post" class="row g-3">
        <div class="col-md-6">
            <label for="buscarPacienteId" class="form-label">ID del Paciente</label>
            <input type="number" class="form-control" name="PacienteId" id="buscarPacienteId" placeholder="ID del Paciente">
        </div>
        <div class="col-md-6">
            <label for="buscarDescripcion" class="form-label">Descripción</label>
            <input type="text" class="form-control" name="Descripcion" id="buscarDescripcion" placeholder="Descripción">
        </div>
        <div class="col-md-6">
            <label for="buscarFecha" class="form-label">Fecha</label>
            <input type="date" class="form-control" name="Fecha" id="buscarFecha">
        </div>
        <div class="col-md-6">
            <label for="buscarCosto" class="form-label">Costo</label>
            <input type="number" step="0.01" class="form-control" name="Costo" id="buscarCosto" placeholder="Costo">
        </div>
        <div class="col-12 text-end mt-3">
            <button type="button" class="btn btn-primary me-2" onclick="BuscarTratamientos()">
                <i class="bi bi-search"></i> Buscar
            </button>
            <button type="button" class="btn btn-secondary" onclick="LimpiarBusquedaTratamientos()">
                <i class="bi bi-eraser"></i> Limpiar
            </button>
        </div>
    </form>
</fieldset>

<input type="hidden" id="hdfOculto" value="" />

<div id="divTable" class="mt-4">
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Refrencias -->
    <script src="~/js/generic.js"></script>
    <script src="~/js/Tratamientos.js"></script>
}
